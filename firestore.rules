rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Kullanıcı verileri: Sadece kendi verilerini okuyup yazabilir
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Lider tablosu: Tüm giriş yapmış kullanıcılar okuyabilir
    // (users koleksiyonundan XP sırasına göre çekiliyor)
    match /users/{userId} {
      allow read: if request.auth != null;
    }
  }
}
